<p>
  <strong>Title:</strong>
  <%= @product.name %>
</p>
 
<p>
  <strong>Text:</strong>
  <%= @product.description %>
</p>
 
<h2>Add a comment:</h2>
<%= form_for([@product, @product.comments.build]) do |f| %>
  <p>
    <%= f.label :Author %><br />
    <%= f.text_field :author %>
  </p>
  <p>
    <%= f.label :Content %><br />
    <%= f.text_area :content %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
 
<%= link_to 'Edit product', product_path(@product) %> |
<%= link_to 'Back to products', products_path %>


